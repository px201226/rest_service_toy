t;\n      this.$store\n        .dispatch(\"QUERY_UPDATE_COMMENT\", {\n          postId: this.postId,\n          commentId: this.commentId,\n          content: this.editContent,\n        })\n        .then(() => {\n          this.$emit(\"refresh\");\n        });\n    },\n\n    onDeleteButtonClick() {\n      this.$store.commit(\"OPEN_MODAL\", {\n        title: \"확인\",\n        content: \"댓글을 정말로 삭제하시겠습니까?\",\n        option1: \"닫기\",\n        option2: \"삭제\",\n        event: \"commentDelete\",\n        data: { postId: this.postId, commentId: this.commentId },\n      });\n    },\n  },\n};\n</script>\n"]}]}